@model IEnumerable<ProyectoFinalSoft.Models.Ambiente>

@{
    ViewData["Title"] = "Ambientes de aprendizaje";
}

<div class="container mt-5">
    <h1 class="text-center mb-3">Gestión Ambientes de aprendizaje</h1>
    <div class="table table-responsive">
        <div class="d-flex justify-content-center">
            <div>
                <h4>Buscar Ambiente de aprendizaje</h4>
            </div>
            <div>
                <form asp-controller="AmbientesControlador" asp-action="Index" class="d-flex justify-content-evenly">
                    <input type="text" name="ambienteBusqueda" placeholder="Ingrese el nombre" class="form-control mx-2" />
                    <button type="submit" class="btn btn-primary mx-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ambienteCodigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ambienteNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ambienteUbicacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ambienteTipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ambienteCapacidad)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ambienteCodigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ambienteNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ambienteUbicacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ambienteTipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ambienteCapacidad)
                </td>
                <td class="d-flex justify-content-evenly">
                 <a asp-controller="AmbientesControlador" asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.ambienteId">Editar</a>
                 <a asp-controller="AmbientesControlador" asp-action="Details" class="btn btn-info  btn-sm" asp-route-id="@item.ambienteId">Detalles</a>
                 <a asp-controller="AmbientesControlador" asp-action="Delete" class="btn btn-sm @(item.ambienteEstado == 0 ? "btn-success" : "btn-danger")"
                 asp-action="Delete" asp-route-id="@item.ambienteId">@(item.ambienteEstado == 0 ? "Activar" : "Desactivar")</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
    </div>
    <a class="btn btn-primary" asp-action="Create">Crear Ambiente</a>
</div>
        
