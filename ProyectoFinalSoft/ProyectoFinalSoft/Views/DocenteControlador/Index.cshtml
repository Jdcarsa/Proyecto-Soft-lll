@model IEnumerable<ProyectoFinalSoft.Models.Docente>

@{
    ViewData["Title"] = "Gestión Docente";
}
<div class="container mt-5">
    <h1 class="text-center mb-3">Gestion Docentes</h1>
    <div class="table table-responsive">
        <div class="d-flex justify-content-center">
            <div>
                <h4>Buscar Docente</h4>
            </div>
            <div>
                <form asp-controller="DocenteControlador" asp-action="Index" class="d-flex justify-content-evenly">
                    <input type="text" name="parametroBusqueda" placeholder="Ingrese el nombre" class="form-control mx-2" />
                    <button type="submit" class="btn btn-primary mx-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.docenteNumId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.docenteTipoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.docenteNombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.docenteTipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.docenteTipoContrato)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.docenteArea)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.docenteNumId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.docenteTipoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.docenteNombre) @Html.DisplayFor(modelItem => item.docenteApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.docenteTipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.docenteTipoContrato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.docenteArea)
                    </td>
                        <td class="d-flex justify-content-around">
                        <a class="btn btn-warning btn-sm mx-2" asp-action="Edit" asp-route-id="@item.docenteId">Editar</a>
                        <a class="btn btn-info btn-sm mx-2" asp-action="Details" asp-route-id="@item.docenteId">Detalles</a>
                        @if(item.docenteEstado == 0)
                         {
                           <a class="btn btn-success btn-sm mx-2 px-3" asp-action="Delete" asp-route-id="@item.docenteId">Activar</a>
                         }
                         else
                          {
                            <a class="btn btn-danger btn-sm mx-2" asp-action="Delete" asp-route-id="@item.docenteId">Desactivar</a>
                          }
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary"  asp-action="Create">Crear Docente</a>
</div>

