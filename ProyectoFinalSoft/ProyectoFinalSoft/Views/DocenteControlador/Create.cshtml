@model ProyectoFinalSoft.Models.Docente

@{
    ViewData["Title"] = "Crear Docente";
}

<div class="container mt-5">
    <h1 class="text-center mb-6">Crear Docente</h1>
    <hr />
        <div class="col-md-6 mx-auto">
        <form class="row mb-3 d-grid gap-2" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="docenteNombre" class="control-label"></label>
                    <input asp-for="docenteNombre" class="form-control"/>
                    <span asp-validation-for="docenteNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="docenteApellido" class="control-label"></label>
                     <input asp-for="docenteApellido" class="form-control"/>
                    <span asp-validation-for="docenteApellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="docenteTipoId" class="control-label"></label>
                    <select asp-for="docenteTipoId" class="form-control form-select">
                        <option>Selecciona un tipo de identificación</option>
                    <option value="CC">Cédula de ciudadanía</option>
                    <option value="TE">Tarjeta de extranjería</option>
                    <option value="CE">Cédula de extranjería</option>
                    <option value="NIT">Número de identificación tributaria</option>
                    </select>
                    <span asp-validation-for="docenteTipoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="docenteNumId" class="control-label"></label>
                    <input asp-for="docenteNumId" class="form-control" />
                    <span asp-validation-for="docenteNumId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="docenteTipo" class="control-label"></label>
                    <select asp-for="docenteTipo" class="form-control form-select">
                        <option>Selecciona un tipo de docente</option>
                        <option value="Técnico">Técnico</option>
                        <option value="Profesional">Profesional</option>
                    </select>
                    <span asp-validation-for="docenteTipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="docenteTipoContrato" class="control-label">Tipo de Contrato</label>
                        <select asp-for="docenteTipoContrato" class="form-control form-select">
                            <option>Selecciona un tipo de contrato</option>
                            <option value="PT">PT - Planta</option>
                            <option value="CNT">CNT - Contratista</option>
                        </select>
                    <span asp-validation-for="docenteTipoContrato" class="text-danger"></span>
                </div>
                <!--
                <div class="form-group">
                    <label asp-for="docenteTipoContrato" class="control-label"></label>
                    <div class="col-md-10">
                    <input asp-for="docenteTipoContrato" class="form-control" />
                    </div>
                    <span asp-validation-for="docenteTipoContrato" class="text-danger"></span>
                </div>  
                -->
                <div class="form-group">
                    <label asp-for="docenteArea" class="control-label"></label>
                    <input asp-for="docenteArea" class="form-control" />
                    <span asp-validation-for="docenteArea" class="text-danger"></span>
                </div>
                <!--
                <div class="form-group">
                    <label asp-for="docenteEstado" class="control-label"></label>
                    <input asp-for="docenteEstado" class="form-control" />
                    <span asp-validation-for="docenteEstado" class="text-danger"></span>
                </div>-->
                <div class="form-group">
                    <br>
                    <a class="col-md-5 btn btn-danger me-5" asp-action="Index">Cancelar</a>
                    <button type="submit" value="Create" class="btn btn-primary col-md-5">Guardar</button>
                </div>
            </form>
        </div>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-secondary" data-dismiss="modal" asp-controller="DocenteControlador" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                e.preventDefault();
                $.ajax({
                    type: this.method,
                    url: this.action,
                    data: $(this).serialize(),
                    success: function (data) {
                        if (data.success) {
                            $('.modal-body').html('La información se ha guardado correctamente');
                            $('#myModal').modal('show');
                        } else {
                            $('.modal-body').html('Hubo un error al guardar la información');
                            $('#myModal').modal('show');
                        }
                    }
                });
            });
        });
    </script>
}

