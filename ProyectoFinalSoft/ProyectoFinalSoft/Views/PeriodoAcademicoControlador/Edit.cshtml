@model ProyectoFinalSoft.Models.PeriodoAcademico

@{
    ViewData["Title"] = "Editar Periodo académico";
}

<h1>Editar Periodo académico</h1>

<h4>Periodo Académico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="periodoId" />
            <div class="form-group">
                <label asp-for="periodoFechaInicio" class="control-label"></label>
                <input asp-for="periodoFechaInicio" class="form-control" />
                <span asp-validation-for="periodoFechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="periodoFechaFin" class="control-label"></label>
                <input asp-for="periodoFechaFin" class="form-control" />
                <span asp-validation-for="periodoFechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="periodoNombre" class="control-label"></label>
                <input asp-for="periodoNombre" class="form-control" />
                <span asp-validation-for="periodoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
                <a class="col-md-5 btn btn-danger me-5" asp-action="Index">Cancelar</a>
                <input type="submit" value="Actualizar" class="btn btn-primary col-md-5" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
