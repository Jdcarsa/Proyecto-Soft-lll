@model ProyectoFinalSoft.Models.PeriodoAcademico

@{
    ViewData["Title"] = "Crear Periodos académicos";
}

<div class="container mt-5">
    <h1 class="text-center mb-6">Crear Periodo académico</h1>
    <hr />
    <div class="col-md-6 mx-auto">
        <form class="row mb-3 d-grid gap-2" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="periodoFechaInicio" class="control-label"></label>
                <input asp-for="periodoFechaInicio" class="form-control datepicker" />
                <span asp-validation-for="periodoFechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="periodoFechaFin" class="control-label"></label>
                <input asp-for="periodoFechaFin" class="form-control datepicker" />
                <span asp-validation-for="periodoFechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="periodoNombre" class="control-label"></label>
                <input asp-for="periodoNombre" class="form-control" />
                <span asp-validation-for="periodoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
                <a asp-action="Index" class="col-md-5 btn btn-danger me-5">Cancelar</a>
                <button type="submit" value="Create" class="btn btn-primary col-md-5">Guardar</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: 'yy/mm/dd'
            });
        });

    </script>

}
