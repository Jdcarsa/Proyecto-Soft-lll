@model ProyectoFinalSoft.Models.PeriodoAcademico

@{
    ViewData["Title"] = "Crear Periodos académicos";
}

<h1>Crear Periodo académico</h1>

<h4>PeriodoAcademico</h4>
<hr />
<div class="container mt-5">
    <div class="col-md-6 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="periodoFechaInicio" class="control-label"></label>
                <input asp-for="periodoFechaInicio" class="form-control datepicker" />
                <span asp-validation-for="periodoFechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="periodoFechaFin" class="control-label"></label>
                <input asp-for="periodoFechaFin" class="form-control datepicker" />
                <span asp-validation-for="periodoFechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="periodoNombre" class="control-label"></label>
                <input asp-for="periodoNombre" class="form-control" />
                <span asp-validation-for="periodoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
                    <a asp-action="Index" class="btn btn-danger col-md-5 me-5">Cancelar</a>
                    <button type="submit" class="btn btn-primary col-md-5">Guardar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: 'yy/mm/dd' 
            });
        });
    </script>
}
