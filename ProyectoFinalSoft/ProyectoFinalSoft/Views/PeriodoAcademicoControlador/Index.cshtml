@model IEnumerable<FinalSoftwarelll.Models.PeriodoAcademico>

@{
    ViewData["Title"] = "Periodos académicos";
}

<div class="container mt-5">
    <h1 class="text-center mb-3">Gestión Periodos académicos</h1>
    <div class="table table-responsive">
        <div class="d-flex justify-content-center">
            <div>
                <h4>Buscar Periodo académico</h4>
            </div>
            <div>
                <form asp-controller="PeriodoAcademicoControlador" asp-action="Index" class="d-flex justify-content-evenly">
                    <input type="text" name="periodoBusqueda" placeholder="Ingrese el nombre" class="form-control mx-2" />
                    <button type="submit" class="btn btn-primary mx-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.periodoFechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.periodoFechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.periodoNombre)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.periodoFechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.periodoFechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.periodoNombre)
            </td>
            <td class="d-flex justify-content-around">
               <a asp-controller="PeriodoAcademicoControlador" asp-action="Edit" class="btn btn-warning btn-sm mx-2" asp-route-id="@item.periodoId">Edit</a> |
                <a asp-controller="PeriodoAcademicoControlador" asp-action="Details" class="btn btn-info btn-sm mx-2" asp-route-id="@item.periodoId">Details</a> |
                <a asp-controller="PeriodoAcademicoControlador" asp-action="Delete" class="btn btn-sm mx-2 @(item.periodoEstado == 0 ? "btn-success px-3" : "btn-danger")"
                    asp-action="Delete" asp-route-id="@item.periodoId">@(item.periodoEstado == 0 ? "Activar" : "Desactivar")</a>
            </td>
        </tr>
}
    </tbody>
</table>
        <a class="btn btn-primary" asp-action="Create">Crear Periodo académico</a>
    </div>
</div>